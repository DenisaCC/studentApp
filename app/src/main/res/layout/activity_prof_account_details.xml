<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#196A01">

        <ImageButton
            android:id="@+id/buttonDrawerToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_back_24"
            android:background="@android:color/transparent"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalii profil"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"

        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/userImage"
            android:src="@drawable/loading2"
            android:layout_height="110dp"
            android:layout_width="110dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/changePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schimbă fotografia de profil"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#444544"
        android:textStyle="italic"
        android:onClick="onChangeProfilePhotoClick"/>


    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume de utilizator"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal" />

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewNumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nume:  "
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/textViewNumeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_toEndOf="@id/textViewNumeLabel" />

            <TextView
                android:id="@+id/textViewPrenumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prenume:  "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/textViewNumeLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textViewPrenumeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_toEndOf="@id/textViewPrenumeLabel"
                android:layout_alignBaseline="@id/textViewPrenumeLabel" />

            <TextView
                android:id="@+id/textViewEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:  "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/textViewPrenumeLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />


            <TextView
                android:id="@+id/textViewEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_toEndOf="@id/textViewEmailLabel"
                android:layout_alignBaseline="@id/textViewEmailLabel" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewTitluLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titlu: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewTitluValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewTitluLabel"
        android:layout_alignBaseline="@id/textViewTitluLabel" />

    <TextView
        android:id="@+id/textViewFacultatiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facultăți: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewTitluLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewFacultatiValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewFacultatiLabel"
        android:layout_alignBaseline="@id/textViewFacultatiLabel" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewAdresaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresa: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewAdresaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewAdresaLabel"
        android:layout_alignBaseline="@id/textViewAdresaLabel" />

    <TextView
        android:id="@+id/textViewTelefonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nr. Telefon: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewAdresaLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewTelefonValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewTelefonLabel"
        android:layout_alignBaseline="@id/textViewTelefonLabel" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>