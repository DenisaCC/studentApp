<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Conecteaza-te ca profesor"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/profLoginText"
        android:textColor="#166906"
        android:layout_marginTop="-145dp"
        android:layout_marginStart="180dp"
        android:drawableLeft="@drawable/baseline_prof_login_24"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginTop="100dp"
        android:layout_margin="35dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#FFFFFF"
        android:background="@drawable/custom_edittext"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/logintitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectare"
                android:textAlignment="center"
                android:textColor="#0B4208"
                android:textSize="40dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_pers_pin_24"
                android:drawablePadding="15dp"
                android:paddingLeft="20dp"
                android:hint="Nume de utilizator"
                android:padding="10dp"
                android:textColor="#0B4208"
                android:textColorHint="#0B4208"
                android:layout_marginTop="40dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_pass_24"
                    android:drawablePadding="15dp"
                    android:hint="Parola"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#0B4208"
                    android:textColorHint="#0B4208" />

                <ToggleButton
                    android:id="@+id/toggleButtonShowPassword"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="15dp"
                    android:textOff=" "
                    android:textOn=" "
                    android:padding="8dp"
                    android:background="@drawable/baseline_eye_24" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Nu ai cont? Înregistrează-te"
                android:textSize="14sp"
                android:textAlignment="center"
                android:id="@+id/signupText"
                android:textColor="#166906"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/loginbtn"
                android:text="Conectează-te"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#0B4208"
                app:cornerRadius="30dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_back_green_24"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_marginTop="-140dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
