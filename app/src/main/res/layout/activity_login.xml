<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#FFFFFF"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/logintitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectare"
                android:textAlignment="center"
                android:textColor="#0B4208"
                android:textSize="40dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_pers_pin_24"
                android:drawablePadding="20dp"
                android:hint="Nume de utilizator"
                android:padding="10dp"
                android:textColor="#0B4208"
                android:textColorHint="#0B4208"
                android:layout_marginTop="80dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_pass_24"
                android:drawablePadding="20dp"
                android:hint="Parola"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#0B4208"
                android:textColorHint="#0B4208"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/loginbtn"
                android:text="Conectează-te"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#0B4208"
                app:cornerRadius = "20dp"/>

            <Button
                android:id="@+id/backbtn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/baseline_back_24"
                android:drawablePadding="20dp"
                app:cornerRadius="20dp"
                android:layout_marginTop="-450dp"
                android:layout_marginLeft="-50dp"
                android:backgroundTint="#2AC4C6C4"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Nu ai cont? Înregistrează-te"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/signupText"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"/>
</LinearLayout>
