<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#196A01"
            android:paddingEnd="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Încarcă anunțuri"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_back_24"
                    android:background="@android:color/transparent"
                    android:padding="1dp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/textViewTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titlu"
            android:layout_marginLeft="20dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Introduceți titlul" />

        <TextView
            android:id="@+id/textViewDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewFacultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facultate"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:startIconDrawable="@drawable/baseline_university_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewFaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:inputType="none"
                android:focusable="false"
                android:hint="Alegeți facultatea" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewDepartmentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departament"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:startIconDrawable="@drawable/baseline_university_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:inputType="none"
                android:focusable="false"
                android:hint="Alegeți departamentul" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewSpecialisationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specializare"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/specialisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:startIconDrawable="@drawable/baseline_university_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewSpecialisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:inputType="none"
                android:focusable="false"
                android:hint="Alegeți specializarea" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descriere"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduceți descrierea"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textViewFileLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textViewFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numele fișierului selectat"
            android:layout_marginLeft="20dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selectați fișierul PDF"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewFileSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niciun fișier selectat"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Încărcați anunțul"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>
