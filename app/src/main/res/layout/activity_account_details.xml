<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#196A01">

        <ImageButton
            android:id="@+id/buttonDrawerToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_back_24"
            android:background="@android:color/transparent"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalii profil"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="23sp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"

        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/userImage"
            android:src="@drawable/baseline_profile_24"
            android:layout_height="110dp"
            android:layout_width="110dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="SchimbÄƒ fotografia de profil"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/signupText"
        android:textColor="#444544"
        android:textStyle="italic"
        android:onClick="onChangeProfilePhotoClick"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume de utilizator"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal" />

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewNumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nume:  "
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/textViewNumeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewNumeLabel" />

        <TextView
            android:id="@+id/textViewPrenumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prenume:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewNumeLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/textViewPrenumeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewPrenumeLabel"
            android:layout_alignBaseline="@id/textViewPrenumeLabel" />

        <TextView
            android:id="@+id/textViewEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewPrenumeLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />


        <TextView
            android:id="@+id/textViewEmailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewEmailLabel"
            android:layout_alignBaseline="@id/textViewEmailLabel" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFacultateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facultate:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewFacultateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewFacultateLabel"
            android:layout_alignBaseline="@id/textViewFacultateLabel" />

        <TextView
            android:id="@+id/textViewDepartamentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departament:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewFacultateLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textViewDepartamentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewDepartamentLabel"
            android:layout_alignBaseline="@id/textViewDepartamentLabel" />

        <TextView
            android:id="@+id/textViewSpecializareLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specializare:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewDepartamentLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textViewSpecializareValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewSpecializareLabel"
            android:layout_alignBaseline="@id/textViewSpecializareLabel" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewNrMatricolLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numar matricol:  "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewNrMatricolValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_toEndOf="@id/textViewNrMatricolLabel"
                android:layout_alignBaseline="@id/textViewNrMatricolLabel" />

        <TextView
            android:id="@+id/textViewAnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewNrMatricolLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewAnValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewAnLabel"
            android:layout_alignBaseline="@id/textViewAnLabel"
            />

        <TextView
            android:id="@+id/textViewGrupaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupa:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/textViewAnLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textViewGrupaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_toEndOf="@id/textViewGrupaLabel"
            android:layout_alignBaseline="@id/textViewGrupaLabel" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>