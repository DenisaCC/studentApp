<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".CampusActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/scheduleToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#196A01">

            <!-- ImageButton pentru navigare înapoi -->
            <ImageButton
                android:id="@+id/buttonDrawerToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_back_24"
                android:background="@android:color/transparent"
                android:padding="1dp"/>

            <!-- Titlul activității -->
            <TextView
                android:id="@+id/Campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="Campus"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp" />

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/CampusPng"
            android:layout_width="500dp"
            android:layout_height="290dp"
            android:src="@drawable/campus1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-0dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/canteenButton"
                    android:layout_width="80dp"
                    android:layout_height="66dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_food_bank_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantine"
                    android:textSize="20sp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="-65dp"
                android:layout_toEndOf="@id/canteenButton"
                android:layout_alignTop="@id/canteenButton"
                android:layout_alignBottom="@id/canteenButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buildingsButton"
                    android:layout_width="80dp"
                    android:layout_height="66dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_faculty_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corpurile facultatii"
                    android:textSize="20sp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="-65dp"
                    android:layout_toEndOf="@id/buildingsButton"
                    android:layout_alignTop="@id/buildingsButton"
                    android:layout_alignBottom="@id/buildingsButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/caminButton"
                    android:layout_width="80dp"
                    android:layout_height="66dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_home_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camin"
                    android:textSize="20sp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="-65dp"
                    android:layout_toEndOf="@id/caminButton"
                    android:layout_alignTop="@id/caminButton"
                    android:layout_alignBottom="@id/caminButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
