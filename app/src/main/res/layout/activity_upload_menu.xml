<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadMenuActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#196A01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_back_24"
            android:background="@android:color/transparent"
            android:padding="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Încarcă meniul cantinelor"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>

    <Spinner
        android:id="@+id/spinner_cantine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseFileButton"
        android:layout_marginTop="-149dp"
        android:background="@drawable/custom_edittext"
        android:layout_marginLeft="100dp"
        android:entries="@array/cantine_array"
        android:padding="10dp" />

    <Button
        android:id="@+id/chooseFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selectează fișierul excel"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/oval_button_background"
        />

    <Button
        android:id="@+id/uploadToSSMSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizează meniul"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chooseFileButton"
        android:background="@drawable/oval_button_background"/>


</RelativeLayout>